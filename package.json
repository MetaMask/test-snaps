{
  "name": "root",
  "private": true,
  "version": "0.0.6",
  "engines": {
    "node": ">=12.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MetaMask/test-snaps.git"
  },
  "scripts": {
    "setup": "yarn install && yarn allow-scripts",
    "prepublishOnly": "yarn build && yarn lint && yarn test",
    "build": "yarn workspaces run build",
    "serve": "$(yarn static packages/site & yarn workspace @metamask/test-snap-confirm serve & yarn workspace @metamask/test-snap-error serve)",
    "lint:eslint": "eslint . --cache --ext js,ts",
    "lint:misc": "prettier '**/*.json' '**/*.md' '!packages/*/CHANGELOG.md' '**/*.yml' --ignore-path .gitignore",
    "lint": "yarn lint:eslint && yarn lint:misc --check",
    "lint:fix": "yarn lint:eslint --fix && yarn lint:misc --write",
    "test": "jest --passWithNoTests"
  },
  "devDependencies": {
    "@lavamoat/allow-scripts": "^1.0.6",
    "@metamask/auto-changelog": "^2.3.0",
    "@metamask/eslint-config": "^9.0.0",
    "@metamask/eslint-config-jest": "^9.0.0",
    "@metamask/eslint-config-nodejs": "^9.0.0",
    "@metamask/eslint-config-typescript": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.4",
    "eslint-plugin-jsdoc": "^37.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.4.2",
    "node-static": "^0.7.11",
    "prettier": "^2.2.1",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.2.4"
  },
  "lavamoat": {
    "allowScripts": {
      "@lavamoat/preinstall-always-fail": false
    }
  }
}
