{
  "openrpc": "1.2.4",
  "info": {
    "title": "Dialog Snap",
    "version": "1.0.0"
  },
  "methods": [
    {
      "name": "dialog",
      "description": "a method pops up a metamask dialog",
      "params": [
        {
          "name": "type",
          "required": true,
          "schema": {
            "type": "string",
            "enum": ["Alert", "Confirmation", "Prompt"]
          }
        },
        {
          "name": "title",
          "required": true,
          "description": "dialog window main title",
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "description",
          "description": "Text description for the dialog",
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "textAreaContent",
          "description": "Main content area with a max height and scrollable",
          "schema": {
            "type": "string"
          }
        }
      ],
      "result": {
        "name": "confirmResult",
        "schema": {
          "type": "boolean"
        }
      },
      "examples": [
        {
          "name": "helloWorldExample",
          "params": [
            {
              "name": "prompt",
              "value": "hello"
            },
            {
              "name": "description",
              "value": "hello description"
            },
            {
              "name": "textAreaContent",
              "value": "very long content area"
            }
          ],
          "result": {
            "name": "world",
            "value": true
          }
        }
      ]
    }
  ]
}
